<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".StartingPoint" >

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginRight="17dp"
        android:background="@drawable/red_button" />

    <ImageButton
        android:id="@+id/ibexit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/blank" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:text="mitsummit.mitpune.edu.in"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/blank" />

    <ImageButton
        android:id="@+id/help"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/ibexit"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/contactus"
        android:background="@drawable/help" />

    <ImageButton
        android:id="@+id/contactus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignTop="@+id/help"
        android:background="@drawable/contactus" />

    <ImageButton
        android:id="@+id/calendar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/contactus"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/imageButton2"
        android:background="@drawable/schedule" />

    <TextView
        android:id="@+id/sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendar"
        android:layout_marginTop="34dp"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Sport"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvEmail"
        android:layout_alignLeft="@+id/rule_category"
        android:layout_marginBottom="89dp"
        android:text="Contact"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/rule2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rule1"
        android:layout_below="@+id/rule1"
        android:text="rule1" />

    <TextView
        android:id="@+id/rule3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rule2"
        android:layout_below="@+id/rule2"
        android:text="rule1" />

    <TextView
        android:id="@+id/rule4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rule3"
        android:layout_below="@+id/rule3"
        android:text="rule1" />

    <TextView
        android:id="@+id/number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rule4"
        android:layout_alignTop="@+id/Contact"
        android:layout_marginTop="28dp"
        android:text="number1" />

    <TextView
        android:id="@+id/rule6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rule4"
        android:layout_below="@+id/rule5"
        android:text="rule1" />

    <TextView
        android:id="@+id/rule_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sport"
        android:layout_below="@+id/sport"
        android:layout_marginTop="16dp"
        android:text="Rules"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/rule1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rule_category"
        android:layout_below="@+id/rule_category"
        android:text="rule1" />

    <TextView
        android:id="@+id/rule5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rule6"
        android:layout_below="@+id/rule4"
        android:text="rule1" />

    <TextView
        android:id="@+id/fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rule6"
        android:layout_below="@+id/rule6"
        android:layout_marginTop="14dp"
        android:text="Fee"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fee"
        android:layout_below="@+id/fee"
        android:text="money" />

    <ImageButton
        android:id="@+id/iback"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/calendar"
        android:layout_toRightOf="@+id/imageView2"
        android:background="@drawable/back" />

    <ImageButton
        android:id="@+id/call1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/number1"
        android:layout_alignLeft="@+id/ibexit"
        android:background="@drawable/call_small" />

    <TextView
        android:id="@+id/number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/number1"
        android:layout_below="@+id/number1"
        android:layout_marginTop="6dp"
        android:text="number1" />

    <ImageButton
        android:id="@+id/call2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/call1"
        android:layout_alignTop="@+id/number2"
        android:background="@drawable/call_small" />

</RelativeLayout>