<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".StartingPoint" >

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:text="mitsummit.mitpune.edu.in"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/contactus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/calendar"
        android:layout_toRightOf="@+id/tvEmail"
        android:background="@drawable/contactus" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ibexit"
        android:layout_toLeftOf="@+id/tvEmail"
        android:text="Quit"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="Schedule" />

    <ImageButton
        android:id="@+id/calendar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/ibexit"
        android:layout_centerHorizontal="true"
        android:background="@drawable/schedule" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/contactus"
        android:text="Contact"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/call1"
        android:layout_below="@+id/call1"
        android:layout_marginTop="7dp"
        android:text="Call" />

    <ImageButton
        android:id="@+id/call1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/call_small" />

    <ImageButton
        android:id="@+id/ImageButton01"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/textView1"
        android:layout_centerVertical="true"
        android:background="@drawable/refresh" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageButton01"
        android:layout_toLeftOf="@+id/tvEmail"
        android:text="Reload" />

    <ImageButton
        android:id="@+id/ImageButton02"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/textView5"
        android:layout_alignRight="@+id/TextView01"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignRight="@+id/ImageButton02"
        android:text="Back"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/ibexit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/iback"
        android:layout_marginTop="67dp"
        android:layout_toLeftOf="@+id/tvEmail"
        android:background="@drawable/quit" />

    <ImageButton
        android:id="@+id/iback"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/textView1"
        android:background="@drawable/back" />

</RelativeLayout>