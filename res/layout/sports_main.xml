<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".StartingPoint" >

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginRight="17dp"
        android:background="@drawable/red_button" />

    <ImageButton
        android:id="@+id/ImageButton02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_below="@+id/imageButton1"
        android:background="@drawable/red_button" />

    <ImageButton
        android:id="@+id/ibexit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp" 
        android:background="@drawable/blank"/>

    <ImageButton
        android:id="@+id/calendar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/ibexit"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/contactus"
        android:background="@drawable/schedule" />

    <ImageButton
        android:id="@+id/help"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/contactus"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/contactus"
        android:background="@drawable/help" />

    <ImageButton
        android:id="@+id/contactus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignTop="@+id/calendar"
        android:background="@drawable/contactus" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:text="mitsummit.mitpune.edu.in"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/calendar"
        android:layout_marginLeft="16dp"
        android:background="@drawable/back" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/back"
        android:layout_below="@+id/back"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="23dp"
        android:layout_toLeftOf="@+id/ibexit" >

    </ListView>

</RelativeLayout>